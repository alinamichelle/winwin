<%#= @message.content %>

<div class="container">
  <h3><strong><%=@user_receiver.name%></strong></h3>
  <% @messages.each do |message| %>
    <div class="message <%= message.sender == current_user ? ' text-right' : ''%>">
      <p><%= message.content %></p>
    </div>
  <% end %>

  <div class="btn-small">
        <%= simple_form_for [@user_receiver, @message_new] do |ef| %>
          <%= ef.input :content, as: :text %>
          <%= ef.button :submit, "Send" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
