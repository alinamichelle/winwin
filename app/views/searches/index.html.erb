<div class="results-title text-center"><h1 class="heading-index">Find a Storyteller</h1></div>
<div class="container">
<div class="big-search-container col-sm-12 col-md-6-offset-3">
  <div class="results-container-left search-form col-lg-3 col-sm-12 left">
      <div class="row">
        <%= simple_form_for :search, url: searches_index_path, method: :get do |f| %>

        <div class="topic">
          <%= f.input_field :query, :style => "min-width: 20px", :placeholder => 'Search...', class: "placeholder-text" %>
        </div>

        <div class="location">
          <%= f.input_field :qlocation, :style => "min-width: 20px", :placeholder => 'Location',  class: "placeholder-text"%>
        </div>
      <h6>Specify a gender</h6>
      <div class="in-line btn-gnd">
        <div class="radio-tags">
          <%= label_tag(:gender_male,   "Male") %>
          <%= radio_button_tag(:gender, "male") %>
          <%= label_tag(:gender_male,   "Female") %>
          <%= radio_button_tag(:gender, "female") %>
          <%= label_tag(:gender_male,   "Other") %>
          <%= radio_button_tag(:gender, "other") %>
        </div>
      </div>
        <div class="search-btn">
          <%= f.submit "Search", class: "btn-nav-search" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="results-container col-lg-9 col-sm-12 right">
    <div class="row">
      <% @results.each do |result| %>
        <div class="col-xs-12 col-md-3">
          <div class="card card-index">
            <%= link_to user_path(result) do %>
              <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= cl_image_path result.avatar_url, :gravity=>"face" %> ')">
                <div class="card-location">
                  <p> <i class="fas fa-map-marker-alt"></i> <%= result.location %></p>
                </div>
                  <p class="card-description"><%= result.name %></p>
              </div>

              <div class="card-footer">

                <ul class="list-inline">
                  <li><a href=""><i class="fa fa-user-plus" aria-hidden="true"></i></a></li>
                  <li><a href=""><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
                  <li><a href=""><i class="fa fa-star"></i></a></li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>


