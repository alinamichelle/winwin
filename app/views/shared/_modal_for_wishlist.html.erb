<div class="modal" id="testWishlist">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header ">
          <h4 class="heading">Add your Wishes</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body wish-input">
          <%= simple_form_for [@user, @wish] do |f| %>
            <%= f.input :description, :placeholder => 'Whats something youve always wanted to do..', class: "placeholder-text" %>
            <%= f.submit "Add", class: "btn-small" %>
          <% end %>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>

</div>

</body>
</html>
