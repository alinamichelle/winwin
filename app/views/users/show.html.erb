
  <div class="container">
    <div class="container-blue col-xs-12 col-md-2-offset-5">
      <div class="container-blue">
        <div class="message-button">
          <%= link_to "Message", "#testMessage", "data-toggle" => "modal", class:"btn btn-small" %>
          <%= render "shared/modal_for_message" %>
        </div>
      </div>
    </div>


    <div class= "profile col-xs-12 col-md-2-offset-5">
      <div class="container-profile">
        <div class="row-profile ">

          <div class="profile-avatar">
            <%= cl_image_tag(@user.avatar_url, class:"avatar-large") %>
          </div>

          <div class="profile-info">
            <div class="name-tagline">
              <h1><%= @user.name%></h1>
              <h4><%= @user.tagline %></h4>
            </div>
            <div class="role-location">
              <h2><%= @user.role %> years old</h2>
              <h5><i class="fas fa-map-marker-alt"></i> <%= @user.location %></h5>
            </div>

          </div>

        </div>

      </div>


      <div class="container container-profile-body col-xs-12 col-md-2-offset-5">
        <div class="profile-content">
          <div class="row">

            <div class="col-sm-4">
              <div class="left-wishlist">

                <div class="flex-container">
                  <div class="flex-item">
                    <%= image_tag 'owlicon.svg', class:"orange-owl" %>
                  </div>
                  <div class="flex-item">
                    <h2><strong>My Stories</strong></h2>
                  </div>
                </div>

                  <% @user.expertises.each do |expertise| %>
                  <ul>
                    <li><%= expertise.topic.name %></li>
                    <li><%= expertise.experience %></li>
                  <% end %>
                </ul>
                <%= render "shared/modal_for_expertise" %>
              </div>

              <div class="left-wishlist">
                  <h2>Wishlist</h2>
                  <ol class="wishlist-list">
                    <% @user.wishes.each do |wish| %>
                      <li><%= wish.description %></li>
                    <% end %>
                  </ol>
                    <%= render "shared/modal_for_wishlist" %>
              </div>

            <div class="col-sm-8">
              <div class="profile-main-content">
                <h2>About Me</h2>

                  <div class="row row-aboutme">
                    <div class="col-sm-12">
                      <div class="aboutme-card">
                        <h3>My Story</h3>
                        <p><%= @user.biography %></p>
                      </div>
                    </div>
                  </div>

                  <div class="row row-aboutme">
                    <div class="col-sm-12">
                      <div class="aboutme-card">
                        <h3>Funniest Story</h3>
                        <p><%= @user.biography %></p>
                      </div>
                    </div>
                  </div>

                  <div class="row row-aboutme">
                    <div class="col-sm-12">
                      <div class="aboutme-card">
                        <h3>Favourite Food</h3>
                        <p><%= @user.biography %></p>
                      </div>
                    </div>
                  </div>
              </div>
            </div>

        </div>

      </div>

    </div>

  </div>

