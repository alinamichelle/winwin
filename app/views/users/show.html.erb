<h1>This is <%= @user.name%>'s profile</h1>
<h3>Info</h3>
  <%= @user.avatar_url %>
  <%= @user.name %>
  <%= @user.birthday %>
  <%= @user.location %>
  <%= @user.tagline %>
  <%= @user.biography %>

<h3>Expertise</h3>
  <ul>
    <% @user.expertises.each do |expertise| %>
    <li><%= expertise.topic.name %></li>
      <li><%= expertise.experience %></li>
    <% end %>
  </ul>

<h3>Wishlist</h3>
  <ul>
    <% @user.wishes.each do |wish| %>
      <li><%= wish.description %></li>
    <% end %>
  </ul>




<%= link_to "Messages", "#testMessage", "data-toggle" => "modal", class:"btn btn-primary" %>
<%= render "shared/modal_for_message" %>


<%= link_to "Saves", "#testSave", "data-toggle" => "modal", class:"btn btn-primary" %>
<%= render "shared/modal_for_save" %>

<%= link_to "Expertise", "#testExpertise", "data-toggle" => "modal", class:"btn btn-primary" %>
<%= render "shared/modal_for_expertise" %>







